<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_size_5"
    android:paddingRight="@dimen/dimen_size_5">

    <ImageView
        android:id="@+id/photo_img"
        android:layout_width="@dimen/dimen_size_70"
        android:layout_height="@dimen/dimen_size_70"
        android:scaleType="centerCrop"
        android:src="@drawable/gallery" />

    <TextView
        android:id="@+id/remove_photo"
        android:layout_width="@dimen/dimen_size_15"
        android:layout_height="@dimen/dimen_size_15"
        android:layout_alignEnd="@+id/photo_img"
        android:layout_alignRight="@+id/photo_img"
        android:layout_alignTop="@+id/photo_img"
        android:background="@drawable/cross" />

</RelativeLayout>