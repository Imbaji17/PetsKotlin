<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_size_10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_size_5"
        app:cardElevation="@dimen/dimen_size_5">

        <LinearLayout
            android:id="@+id/llFindHostel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_size_5">

            <ImageView
                android:id="@+id/ivFindHostel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_size_70"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvName"
                style="@style/TextViewStyle"
                android:layout_marginTop="@dimen/dimen_size_5"
                android:text="@string/app_name"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tvLocation"
                style="@style/TextViewStyle"
                android:layout_marginTop="@dimen/dimen_size_5"
                android:text="@string/app_name"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
