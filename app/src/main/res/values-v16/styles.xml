<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/rounded_color_primary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/dimen_size_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">30</item>
        <item name="android:minHeight">@dimen/dimen_size_40</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:checked">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
</resources>